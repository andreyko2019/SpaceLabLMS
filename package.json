{
  "name": "spacelablms",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": "21.7.3",
    "npm": "10.8.1"
  },
  "license": "ISC",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:student": "npm run dev -w @spacelablms/student",
    "dev:admin": "npm run dev -w @spacelablms/admin",
    "build:student": "npm run build -w @spacelablms/student",
    "build:admin": "npm run build -w @spacelablms/admin",
    "build:all": "npm run build -w @spacelablms/student && npm run build -w @spacelablms/admin",
    "preview:student": "npm run preview -w @spacelablms/student",
    "preview:admin": "npm run preview -w @spacelablms/admin",
    "deploy:student": "gh-pages -d apps/student/dist -b student-site",
    "deploy:admin": "gh-pages -d apps/admin/dist -b admin-site",
    "api-generate:student": "npx @openapitools/openapi-generator-cli generate -i ./apps/student/src/shared/api/swagger.json -o ./apps/student/src/shared/api/gen -g typescript-axios --additional-properties=supportsES6=true,useSingleRequestParameter=true",
    "api-generate:admin": "npx @openapitools/openapi-generator-cli generate -i ./apps/admin/src/shared/api/swagger.json -o ./apps/admin/src/shared/api/gen -g typescript-axios --additional-properties=supportsES6=true,useSingleRequestParameter=true",
    "lint:js": "eslint src --ext .ts,.vue",
    "lint:css": "stylelint --fix **/*.{css,scss}"
  },
  "dependencies": {
    "@vee-validate/yup": "^4.12.8",
    "axios": "^1.6.8",
    "chart.js": "^4.4.3",
    "pinia": "^2.1.7",
    "universal-cookie": "^6.1.3",
    "vee-validate": "^4.12.8",
    "vue": "^3.4.21",
    "vue-chartjs": "^5.3.1",
    "vue-router": "^4.3.2",
    "vue-skeletor": "^1.0.6",
    "vue-sweetalert2": "^5.0.11",
    "vue-toast-notification": "^3.1.2",
    "yup": "^1.0.1",
    "vue-i18n": "^9.13.1"
  },
  "devDependencies": {
    "@types/node": "^18.13.0",
    "@types/vue-select": "^3.16.2",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/eslint-config-typescript": "^11.0.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.9.0",
    "gh-pages": "^6.1.1",
    "prettier": "^2.8.4",
    "sass": "^1.58.0",
    "stylelint": "^14.16.1",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "typescript": "^4.9.3",
    "vite": "^4.3.5",
    "vite-plugin-checker": "^0.6.4",
    "vite-plugin-eslint": "^1.8.1",
    "vue-eslint-parser": "^9.1.0",
    "vue-tsc": "^1.6.5"
  }
}
